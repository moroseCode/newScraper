<div id="comments-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close modalClose" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <textarea class="form-control" id="commentArea" rows="3"
                                    placeholder="Enter new comment here."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="modalClose btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="save-button" class="btn btn-dark">Save Comment</button>
            </div>
        </div>
    </div>
</div>

<!-- Navbar -->
<div class="all-content">
    <nav class="navbar navbar-expand-lg navbar-dark hlText hlJumbo">
        <a class="navbar-brand hlText" href="/">Headline Herder</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-sm b hlButton" href="/scrape" role="button">Gather New Articles</a>
                </li>
            </ul>


            </ul>
        </div>
    </nav>

    <div class="jumbotron jumbotron-fluid d-flex align-items-center hlTitle">
        <div class="container" id="hl_info">
            <h1 class="display-3">Headline Herder</h1>
            <p>Let Us Gather Your News For You!</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{#each articles}}
                <div class="card">
                    <div class="d-flex align-items-center">
                        <h5 class="highlight card-header mx-auto w-100 hlTitle">
                            <a href="https://reuters.com/theWire{{link}}" target="_blank" class="link">{{title}}</a>
                        </h5>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-md-12">
                            <div class="card-body">
                                <p class="card-text">{{summary}}</p>
                                <div>
                                    <button class="btn btn-primary comment-button" id={{_id}} data-toggle="modal"
                                        data-target="#comments-modal">Comment</button>
                                    <details>
                                        <summary>Show Comments</summary>
                                        {{#each comments}}
                                        <p>{{commentsText}} <button class="btn btn-danger delete-button"
                                                data-id="{{id}}" class="btn btn-sm float-right">Delete</button></p>

                                        {{/each}}
                                    </details>
                                </div>
                                <div class="card-text commentArea" data-id={{_id}}></div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="../assets/javascript/app.js"></script>