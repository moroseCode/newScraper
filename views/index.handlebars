<!-- Navbar -->
<div class="all-content">
    <nav class="navbar navbar-expand-lg navbar-dark hlText hlJumbo">
        <a class="navbar-brand hlText" href="/">Headline Herder</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse"
            data-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="btn btn-sm b hlButton" href="/scrape"
                        role="button">Gather New Articles</a>
                </li>
            </ul>
                

            </ul>
        </div>
    </nav>
    <!-- Jumbotron -->
    <div class="jumbotron jumbotron-fluid d-flex align-items-center hlTitle">
        <div class="container" id="hl_info">
            <h1 class="display-3">Headline Herder</h1>
            <p >Let Us Gather Your News For You!</p>
        </div>
    </div>
    <!-- Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {{#each articles}}
                <div class="card">
                    <div class="d-flex align-items-center">
                        <h5 class="highlight card-header mx-auto w-100 hlTitle">
                            <a href="https://reuters.com/theWire{{link}}" target="_blank" class="link">{{title}}</a>
                        </h5>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-md-12">
                            <div class="card-body">
                                <p class="card-text">{{summary}}</p>
                                <form>  
                                    <div class="form-group">
                                    <label for="hlComment">Leave a comment</label>
                                    <textarea class="form-control" id="hlComment" rows="3"></textarea>
                                    </div>
                                    <div class="form-group row">
                                    <div class="col-sm-12">
                                    <button type="submit" class="btn btn-primary comment-button">Comment</button>
                                    </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<script src="../assets/javascript/app.js"></script>